<Window x:Class="EustonLeisureMessaging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EustonLeisureMessaging"
        mc:Ignorable="d"
        Title="Euston Leisure Messaging" Height="600" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <!-- Email List Box -->
        <ListBox x:Name="lst_Emails" Height="200" Width="200" Margin="499,68,594.6,55.2" ItemsSource="{Binding Emails}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="3">
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="From:" DockPanel.Dock="Left" Margin="5,0,10,0" />
                            <TextBlock Text="{Binding Path=Sender}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Subject:" DockPanel.Dock="Left" Margin="5,0,5,0" />
                            <TextBlock Text="{Binding Path=Subject}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Message:" DockPanel.Dock="Left" Margin="5,0,5,0" />
                            <TextBlock Text="{Binding Path=Body}" />
                        </DockPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- SMS List Box -->
        <ListBox x:Name="lst_SMS" HorizontalAlignment="Left" Height="200" Margin="744,68,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding SMSMessages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="3">
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Tel:" DockPanel.Dock="Left" Margin="5,0,10,0" />
                            <TextBlock Text="{Binding Path=Sender}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Message:" DockPanel.Dock="Left" Margin="5,0,5,0" />
                            <TextBlock Text="{Binding Path=Body}" />
                        </DockPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Tweets List Box -->
        <ListBox x:Name="lst_Tweets" HorizontalAlignment="Left" Height="200" Margin="973,68,0,0" VerticalAlignment="Top" Width="200" ItemsSource="{Binding Tweets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="3">
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Twitter ID:" DockPanel.Dock="Left" Margin="5,0,10,0" />
                            <TextBlock Text="{Binding Path=Sender}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="Message:" DockPanel.Dock="Left" Margin="5,0,5,0" />
                            <TextBlock Text="{Binding Path=Body}" />
                        </DockPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Tweets:" HorizontalAlignment="Left" Margin="973,30,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Texts:" HorizontalAlignment="Left" Margin="744,30,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Emails:" HorizontalAlignment="Left" Margin="499,30,0,0" VerticalAlignment="Top" Width="200"/>
        
        <TextBox x:Name="txt_MessageHeader" HorizontalAlignment="Left" Height="23" Margin="88,123,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txt_MessageBody" HorizontalAlignment="Left" Height="132" Margin="88,151,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="344"/>
        <Label Content="Send A Message:" HorizontalAlignment="Left" Margin="88,30,0,0" VerticalAlignment="Top" Width="344"/>
        <Button x:Name="btn_Send" Click="btn_Send_Click" Content="Send" HorizontalAlignment="Left" Margin="88,288,0,0" VerticalAlignment="Top" Width="88" Height="25"/>
        <Label Padding="5" Foreground="Red" HorizontalAlignment="Left" Margin="88,68,0,0" VerticalAlignment="Top" Height="50" Width="344">
            <TextBlock x:Name="txtBlock_ErrorMessage" TextWrapping="WrapWithOverflow"></TextBlock>
        </Label>
    </Grid>
</Window>
